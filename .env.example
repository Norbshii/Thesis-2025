APP_NAME=StudentAttendance
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-backend-url.onrender.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# Database (not required for Airtable-only setup)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=student_portal
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_STUDENTS=your_students_table_id_here
AIRTABLE_TABLE_TEACHERS=your_teachers_table_id_here
AIRTABLE_TABLE_CLASSES=your_classes_table_id_here
AIRTABLE_TABLE_ATTENDANCE=your_attendance_table_id_here

# Geofencing
GEOFENCE_RADIUS=100
